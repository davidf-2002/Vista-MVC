@model IEnumerable<Vista.Web.Data.Workshop>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingRef)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingRef)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkshopId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkshopId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkshopId">Delete</a> |
                <a asp-controller="WorkshopStaff" asp-action="Index" 
                   asp-route-id="@item.WorkshopId">Staff List</a>

            </td>
        </tr>
}
    </tbody>
</table>
